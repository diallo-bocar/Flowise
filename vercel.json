{
  "version": 2,
  "public": false,
  "builds": [
    {
      "source": "packages/ui",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "source": "packages/server",
      "use": "@vercel/node",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "packages/server/$1"
    },
    {
      "src": "/(.*)",
      "dest": "packages/ui/$1"
    }
  ],
  "env": {
    "MY_ENV_VARIABLE": "@my_env_variable"
  },
  "build": {
    "env": {
      "MY_BUILD_ENV_VARIABLE": "@my_build_env_variable"
    }
  },
  "projects": [
    {
      "name": "ui",
      "buildCommand": "yarn workspace ui build",
      "outputDirectory": "packages/ui/build"
    },
    {
      "name": "server",
      "buildCommand": "yarn workspace server build",
      "outputDirectory": "packages/server/dist"
    }
  ],
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./"
}
